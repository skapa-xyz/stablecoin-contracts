    "@safe-global/protocol-kit": "1.3.0",
    "@safe-global/safe-core-sdk-types": "2.3.0",
    "@starboardventures/hardhat-verify": "1.0.1",
    "bignumber.js": "^9.1.2",
    "decimal.js": "^10.2.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
