{
  "name": "@secured-finance/stablecoin-contracts",
  "version": "1.0.0",
  "description": "Secured Finance Stablecoin Contracts",
  "files": [
    "artifacts",
    "cache",
    "contracts",
    "deployments/outputs"
  ],
  "scripts": {
    "hardhat": "hardhat",
    "prepare": "run-s 'prepare:*'",
    "prepare:create-test-account": "node ./scripts/makeAccounts.js",
    "prepare:compile": "hardhat compile",
    "prepare:set-version": "node scripts/set-version.js",
    "prepare:husky": "husky",
    "generate:metadata": "node scripts/generate-metadata.js",
    "generate:metadata-full": "node scripts/generate-full-metadata.js",
    "generate:remix-metadata": "node scripts/generate-remix-metadata.js",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "check": "run-s 'check:*'",
    "check:lint": "eslint",
    "check:prettier": "prettier --check '**/*.{js,json,sol}'",
    "fix": "run-s 'fix:*'",
    "fix:lint": "eslint --fix",
    "fix:prettier": "prettier --write '**/*.{js,json,sol}'",
    "prepublishOnly": "npm run prepare"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "@openzeppelin/contracts": "3.4.2",
    "@openzeppelin/contracts-upgradeable": "3.4.2"
  },
